@model FirstChoiceApp.Models.CompanyInfo

@{
    ViewBag.Title = "Index";
}

<p class="page-title">Company Information</p>
<hr class="hr-title" />
<br />

<div>
    <table>
        <tr>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CompanyName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.OwnerName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.OwnerName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ContactNo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                </dl>
            </td>
            <td style="width: 20px;"></td>
            <td style="text-align: center;">
                <b>Logo</b> <br/>
                @if (Model.CompanyLogo != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(Model.CompanyLogo)" width="100" height="100" style="border-radius: 3px;" />
                }
            </td>
        </tr>
    </table>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
</p>
